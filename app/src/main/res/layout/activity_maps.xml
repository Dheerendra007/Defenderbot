<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapsActivity" />

    <FrameLayout
        android:id="@+id/calculate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3"
                android:background="@drawable/address_custom_background"
                >

                <TextView
                    android:id="@+id/lengthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/strong_grey"
                    android:textSize="12sp"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/areaTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/strong_grey"
                    android:textSize="12sp"
                    android:layout_weight="0.9"
                    android:gravity="center"
                   />

              <LinearLayout
                  android:id="@+id/layaddgeo"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1.2"
                  android:gravity="center"
                  >

                  <ImageView
                      android:layout_width="@dimen/_35sdp"
                      android:layout_height="@dimen/_35sdp"
                      android:background="@drawable/add_safe_place_glow"
                      />


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_24sdp">

       <!-- <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/btnEdit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom|start"
           android:layout_marginBottom="16dp"
           android:layout_marginEnd="8dp"
           android:layout_marginRight="8dp"
           android:tint="?colorPrimary"
           app:elevation="2dp"
           app:fabSize="normal"
           app:rippleColor="@color/soft_grey"
           app:srcCompat="@drawable/ic_edit_black_24dp"
           android:visibility="gone"
           tools:ignore="VectorDrawableCompat" />-->

      <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:tint="?colorPrimary"
            app:elevation="2dp"
            app:fabSize="normal"
            app:rippleColor="@color/soft_grey"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            tools:ignore="VectorDrawableCompat" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:tint="?colorPrimary"
            app:elevation="2dp"
            app:fabSize="normal"
            app:rippleColor="@color/soft_grey"
            app:srcCompat="@drawable/ic_view_list_black_24dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_30sdp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:tint="?colorPrimary"

            app:elevation="2dp"
            app:fabSize="normal"
            app:rippleColor="@color/soft_grey"
            app:srcCompat="@drawable/ic_undo_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:tint="?colorPrimary"
            app:elevation="2dp"
            app:fabSize="normal"
            app:rippleColor="@color/soft_grey"
            app:srcCompat="@drawable/ic_done_black_24dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_droplocation"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_bg"
                android:layout_margin="@dimen/_24sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_30sdp"
                    android:paddingLeft="@dimen/_30sdp"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/roundrect_button_grey"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_search_black_24dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_droplocation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:hint="Location"
                        android:padding="@dimen/_5sdp"
                        android:ems="10"
                        android:textSize="@dimen/_13sdp"
                        android:gravity="center|left"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColorHint="@android:color/tertiary_text_dark"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_roundrect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/roundrect_button_grey"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_format_align_left_black_24dp"
                        />
                    <EditText
                        android:id="@+id/et_droptitel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:hint="Save as name"
                        android:padding="@dimen/_5sdp"
                        android:ems="10"
                        android:gravity="center|left"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColorHint="@android:color/tertiary_text_dark"
                        />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?colorPrimary"
                app:elevation="2dp"
                app:fabSize="normal"
                android:layout_marginBottom="@dimen/_10sdp"
                app:rippleColor="@color/soft_grey"
                android:background="@drawable/ic_check_circle_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />
           <ImageView
                android:id="@+id/btncancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?colorPrimary"
                app:elevation="2dp"
                app:fabSize="normal"
                android:layout_marginBottom="@dimen/_24sdp"
                app:rippleColor="@color/soft_grey"
                android:background="@drawable/ic_cancel_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
               />

        </RelativeLayout>
        <fragment android:id="@+id/autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            />

    </LinearLayout>


</FrameLayout>