<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#3B9A91"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_50sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter passcode"
                    android:layout_gravity="center"
                    android:textColor="@color/color_white"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <com.defenderbot.util.otpview.OtpView
                        android:id="@+id/otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:itemBackground="@drawable/bg_otp_item"
                        android:textColor="@android:color/black"
                        app:hideLineWhenFilled="true"
                        app:itemCount="4"
                        app:itemSpacing="6dp"
                        app:lineColor="@color/otp_item_state"
                        app:state_filled="true"
                        app:viewType="line" />
                  <!--  <EditText
                        android:id="@+id/et_code1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rect_input"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        />
                    <EditText
                        android:id="@+id/et_code2"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rect_input"
                        android:maxLength="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        />
                    <EditText
                        android:id="@+id/et_code3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rect_input"
                        android:maxLength="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        />
                    <EditText
                        android:id="@+id/et_code4"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rect_input"
                        android:maxLength="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        />-->
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_varify"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Save"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/roundrect_button"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/bg_color"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save passcode will use for stop child tracking."
                    android:layout_gravity="center"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:src="@drawable/back_green"
        />

</RelativeLayout>