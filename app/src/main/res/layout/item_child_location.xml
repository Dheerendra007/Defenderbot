<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:orientation="vertical"
    android:background="@color/color_blue_dark"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:gravity="center"
            >
         <!--   <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                />-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_location_light_green_500_36dp"
                android:layout_margin="@dimen/_2sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_14sdp"
            >
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:text="Add address"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    />

            <TextView
                android:id="@+id/tv_locationaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp"
                android:text="Add address"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|left"
                android:textColor="@android:color/black"
                />


            <!-- <TextView
                 android:id="@+id/tv_adddestination"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_blue_dark"
                 android:text="Add address"
                 android:textSize="@dimen/_10sdp"
                 android:layout_weight="1"
                 android:gravity="center|left"
                 android:layout_marginTop="@dimen/_2sdp"
                 />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

